<div class="accordion filters" id="accordionExample">
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingOne">
      <button
        class="accordion-button"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#collapseOne"
        aria-expanded="true"
        aria-controls="collapseOne"
      >
        Price
      </button>
    </h2>
    <div
      id="collapseOne"
      class="accordion-collapse collapse show"
      aria-labelledby="headingOne"
    >
      <div class="accordion-body expand">
        <div class="row" style="margin: auto;">
          <div class="col-6 p-1">
            <input class="price-input min-price" type="number" name="min-price" id="min-price" placeholder="From">
          </div>
          <div class="col-6 p-1">
            <input class="price-input max-price" type="number" name="max-price" id="max-price" placeholder="To">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingTwo">
      <button
        class="accordion-button"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#collapseTwo"
        aria-expanded="true"
        aria-controls="collapseTwo"
      >
        Types
      </button>
    </h2>
    <div
      id="collapseTwo"
      class="accordion-collapse collapse show"
      aria-labelledby="headingTwo"
    >
      <div class="accordion-body expand">
        <div class="checkbox-group">
          {% for type in collection.all_types %}
            <div class="form-check">
              <input
                class="form-check-input product-type-input {{type}}"
                type="checkbox"
                value="{{type}}"
                id="{{type}}"
              >
              <label class="form-check-label" for="{{type}}"> {{ type }} </label>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>

  <div class="accordion-item">
    <h2 class="accordion-header" id="headingThree">
      <button
        class="accordion-button"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#collapseThree"
        aria-expanded="true"
        aria-controls="collapseThree"
      >
        Availability
      </button>
    </h2>
    <div
      id="collapseThree"
      class="accordion-collapse collapse show"
      aria-labelledby="headingThree"
    >
      <div class="accordion-body expand">
        <div class="checkbox-group">
          <div class="form-check">
            <input class="form-check-input availability-input in-stock" type="checkbox" value="1" id="in-stock">
            <label class="form-check-label" for="in-stock"> In Stock </label>
          </div>
          <div class="form-check">
            <input class="form-check-input availability-input out-of-stock" type="checkbox" value="0" id="out-of-stock">
            <label class="form-check-label" for="out-of-stock"> Out Of Stock </label>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
