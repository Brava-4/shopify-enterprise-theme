{% form 'customer_address', customer.new_address %}
  <div class="row">
    <div class="col-md-6 col-12">
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="first_name"
          placeholder="First Name"
          name="address[first_name]"
        >
        <label for="first_name">First Name</label>
      </div>
    </div>
    <div class="col-md-6 col-12">
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="last_name" placeholder="Last Name" name="address[last_name]">
        <label for="last_name">Last Name</label>
      </div>
    </div>
  </div>
  <div class="form-floating mb-3">
    <input
      type="number"
      class="form-control"
      id="phone"
      placeholder="Address Line 1"
      name="address[phone]"
    >
    <label for="phone">Phone</label>
  </div>

  <div class="form-floating mb-3">
    <input
      type="text"
      class="form-control"
      id="address1"
      placeholder="Address Line 1"
      name="address[address1]"
    >
    <label for="address1">Address Line 1</label>
  </div>

  <div class="form-floating mb-3">
    <input
      type="text"
      class="form-control"
      id="address2"
      placeholder="Address Line 2"
      name="address[address2]"
    >
    <label for="address2">Address Line 2</label>
  </div>
  <div class="row">
    <div class="col-md-6 col-12">
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="city"
          placeholder="City"
          name="address[city]"
        >
        <label for="city">City</label>
      </div>
    </div>
    <div class="col-md-6 col-12">
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="province"
          placeholder="Province"
          name="address[province]"
        >
        <label for="province">Province</label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-12">
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="country"
          placeholder="Country"
          name="address[country]"
        >
        <label for="country">Country</label>
      </div>
    </div>
    <div class="col-md-6 col-12">
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="zip"
          placeholder="ZIP"
          name="address[zip]"
        >
        <label for="zip">ZIP</label>
      </div>
    </div>
  </div>

  <button type="submit" class="btn btn-success container-fluid mb-3" value="Create">Create</button>
{% endform %}
