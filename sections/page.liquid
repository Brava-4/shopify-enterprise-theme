{{ 'page.css' | asset_url | stylesheet_tag }}
<div class="container-fluid">
  <div class="title">
    <h1>{{ page.title }}</h1>
  </div>
  <div class="page-content">
    {{ page.content }}
  </div>
</div>

<style>
  .title {
      color: {{section.settings.titleColor}};
  }
</style>
{% schema %}
{
  "name": "Page",
  "presets": [
    {
      "name": "Page"
    }
  ],
  "settings": [
    {
      "type": "color",
      "id": "titleColor",
      "label": "Title Color ",
      "default": "#000000"
    }
  ]
}
{% endschema %}
