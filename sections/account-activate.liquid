<div class="container-fluid">
  <div class="row-centered">
    <div class="col-lg-4 col-md-6 col-12">
      <h1 class="text-center">Activate Account</h1>

      {% form 'activate_customer_password' %}
        {{ form.errors | default_errors }}

        <div class="form-floating mb-3">
          <input type="password" class="form-control" id="password" placeholder="Password" name="customer[password]">
          <label for="password">Password</label>
        </div>
        <div class="form-floating mb-3">
          <input
            type="password"
            class="form-control"
            id="password_confirmation"
            placeholder="Confirm Password"
            name="customer[password_confirmation]"
          >
          <label for="password_confirmation">Confirm Password</label>
        </div>

        <button type="submit" class="btn btn-success container-fluid mb-3" value="Activate Account">
          Activate Account
        </button>
        <button type="submit" name="decline" class="btn btn-danger container-fluid mb-3" value="Decline Invitation">
          Decline Invitation
        </button>
      {% endform %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Account Activation",
  "presets": [
    {
      "name": "Account Activation"
    }
  ],
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "color",
      "id": "bg",
      "label": "Background Color",
      "default": "#33688C"
    },

    {
      "type": "color",
      "id": "color",
      "label": "Text Color ",
      "default": "#FFFFFF"
    }
  ]
}
{% endschema %}
