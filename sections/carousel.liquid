{{ 'carousel.css' | asset_url | stylesheet_tag }}
<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner slider-container">
    {% if section.settings.show_first_slide %}
      <div class="carousel-item banner">
        <img src="{{section.settings.image_first_slide | image_url}}" class="d-block banner-image" alt="...">
        <div class="carousel-caption d-none d-md-block caption">
          <h5>{{ section.settings.title_first_slide }}</h5>
          <p>{{ section.settings.subtitle_first_slide }}</p>
        </div>
      </div>
    {% endif %}

    {% if section.settings.show_second_slide %}
      <div class="carousel-item banner">
        <img src="{{section.settings.image_second_slide | image_url}}" class="d-block banner-image" alt="...">
        <div class="carousel-caption d-none d-md-block caption">
          <h5>{{ section.settings.title_second_slide }}</h5>
          <p>{{ section.settings.subtitle_second_slide }}</p>
        </div>
      </div>
    {% endif %}

    {% if section.settings.show_third_slide %}
      <div class="carousel-item banner">
        <img src="{{section.settings.image_third_slide | image_url}}" class="d-block banner-image" alt="...">
        <div class="carousel-caption d-none d-md-block caption">
          <h5>{{ section.settings.title_third_slide }}</h5>
          <p>{{ section.settings.subtitle_third_slide }}</p>
        </div>
      </div>
    {% endif %}
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<style>
  .banner {
    height:  {{section.settings.carouser_height}}rem;
  }

  .caption {
    color: {{section.settings.color}} !important;
  }
</style>

<script>
  $(document).ready(function () {
    $('.slider-container div:first').addClass('active');
  });
</script>
{% schema %}
{
  "name": "Slider",
  "presets": [
    {
      "name": "Slider"
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Shop All Categories"
    },
    {
      "type": "number",
      "id": "carouser_height",
      "label": "Slider Height",
      "default": 25
    },
    {
      "type": "checkbox",
      "id": "show_first_slide",
      "label": "Show First Slide",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image_first_slide",
      "label": "Image First Slide"
    },
    {
      "type": "text",
      "id": "title_first_slide",
      "label": "Title First Slide",
      "default": "First Slide Title"
    },
    {
      "type": "text",
      "id": "subtitle_first_slide",
      "label": "Subtitle First Slide",
      "default": "Some representative placeholder content for the first slide."
    },
    {
      "type": "checkbox",
      "id": "show_second_slide",
      "label": "Show Second Slide",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image_second_slide",
      "label": "Image Second Slide"
    },
    {
      "type": "text",
      "id": "title_second_slide",
      "label": "Title Second Slide",
      "default": "Second Slide Title"
    },
    {
      "type": "text",
      "id": "subtitle_second_slide",
      "label": "Subtitle Second Slide",
      "default": "Some representative placeholder content for the second slide."
    },
    {
      "type": "checkbox",
      "id": "show_third_slide",
      "label": "Show Third Slide",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image_third_slide",
      "label": "Image Third Slide"
    },
    {
      "type": "text",
      "id": "title_third_slide",
      "label": "Title Third Slide",
      "default": "Third Slide Title"
    },
    {
      "type": "text",
      "id": "subtitle_third_slide",
      "label": "Subtitle Third Slide",
      "default": "Some representative placeholder content for the third slide."
    },
    {
      "type": "color",
      "id": "color",
      "label": "Text Color ",
      "default": "#FFFFFF"
    }
  ]
}
{% endschema %}
