{{ 'featured-collection.css' | asset_url | stylesheet_tag }}
<div class="product-slider">
  <div class="title">
    {{ section.settings.collection.title }}
  </div>

  {% render 'product-slider', productList: section.settings.collection.products %}
</div>

<style></style>

{% schema %}
{
  "name": "Featured Collection",
  "presets": [
    {
      "name": "Featured Collection"
    }
  ],
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "color",
      "id": "bg",
      "label": "Background Color",
      "default": "#33688C"
    },

    {
      "type": "color",
      "id": "color",
      "label": "Text Color ",
      "default": "#FFFFFF"
    }
  ]
}
{% endschema %}
