<div class="container-fluid">
  <div class="row-centered">
    <div class="col-lg-4 col-md-6 col-12">
      <h1 class="text-center">Sign Up</h1>

      {% form 'create_customer' %}
        {{ form.errors | default_errors }}

        <div class="row">
          <div class="col-md-6 col-12">
            <div class="form-group mb-3">
              <label for="first_name">First Name</label>
              <input
                type="text"
                class="form-control"
                id="first_name"
                placeholder="First Name"
                name="customer[first_name]"
              >
            </div>
          </div>
          <div class="col-md-6 col-12">
            <div class="form-group mb-3">
              <label for="last_name">Last Name</label>
              <input type="text" class="form-control" id="last_name" placeholder="Last Name" name="customer[last_name]">
            </div>
          </div>
        </div>

        <div class="form-group mb-3">
          <label for="email">Email Address</label>
          <input
            type="email"
            class="form-control"
            id="email"
            aria-describedby="emailHelp"
            placeholder="Enter email"
            name="customer[email]"
          >
        </div>
        <div class="form-group mb-3">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" placeholder="Password" name="customer[password]">
        </div>
        <button type="submit" class="btn btn-danger container-fluid mb-3" value="Create">Sign Up</button>
      {% endform %}

      <p class="form-text text-muted mb-3 container text-center">Already have an account?</p>
      <a href="{{ routes.account_login_url }}" type="button" class="btn btn-primary container-fluid">Login</a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Sign Up",
  "presets": [
    {
      "name": "Sign Up"
    }
  ],
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "color",
      "id": "bg",
      "label": "Background Color",
      "default": "#33688C"
    },

    {
      "type": "color",
      "id": "color",
      "label": "Text Color ",
      "default": "#FFFFFF"
    }
  ]
}
{% endschema %}
